//Stages of Life: Write an if-else chain that determines a personâ€™s stage of life. 
//Set a value for the variable age, and then

//If the person is less than 2 years old, print a message that the person is a baby.
let personAge: number = 1; // Age of the person in years

if (personAge < 2) {
    console.log("The person is a baby.");
} else {
    console.log("The person is not a baby.");
}

//If the person is at least 2 years old but less than 4, print a message that the person is a toddler.
let personAge1: number = 3; // Age of the person in years

if (personAge1 >= 2 && personAge1 < 4) {
    console.log(" The person is a toddler");
} else {
    console.log("The person is not a toddler.");
}

//If the person is at least 4 years old but less than 13, print a message that the person is a kid.
let personAge2: number = 12; // Age of the person in years

 if(personAge2 >= 4 && personAge2 < 13){
    console.log(" The person is a Kid");
} else {
    console.log("The person is not a kid.");
}

//If the person is at least 13 years old but less than 20, print a message that the person is a teenager.
let personAge3: number = 18; // Age of the person in years

 if(personAge3 >= 13 && personAge3 < 20){
    console.log(" The person is a Teenager");
} else {
    console.log("The person is not a teenager.");
}

//If the person is at least 20 years old but less than 65, print a message that the person is an adult.
let personAge4: number = 52; // Age of the person in years

 if(personAge4 >= 20 && personAge4 < 65){
    console.log(" The person is an Adult");
} else {
    console.log("The person is not an adult.");
}

//If the person is age 65 or older, print a message that the person is an elder.
let personAge5: number = 62; // Age of the person in years

 if(personAge5 <= 65){
    console.log(" The person is an Elder");
} else {
    console.log("EHHH ");
}
